<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <RelativeLayout
                android:id="@+id/re1"
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                android:layout_gravity="center_vertical"
                android:background="#ff2498e3"
                android:orientation="horizontal"
                android:paddingLeft="3.0dip"
                android:paddingRight="3.0dip" >

                <TextView
                    android:id="@+id/top_back"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:drawableLeft="@drawable/topback"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="用户注册"
                    android:textColor="#ffffffff"
                    android:textSize="20.0dip"
                    android:textStyle="bold" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/re1"
                android:visibility="gone"
                android:layout_marginTop="-3dp"
                android:background="@drawable/new_my_beijing" />

            <TextView
                android:id="@+id/t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/imageView1"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:textColor="#383636"

                android:textSize="20sp"
                android:gravity="right"
                android:text="用  户  名："
               />

            <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/t1"
                android:layout_marginRight="30dp"
                android:layout_toRightOf="@+id/t1"

                android:ems="10"
                android:lines="1"
                android:singleLine="true" />

            <TextView
                android:id="@+id/t2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/t1"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:textColor="#383636"

                android:textSize="20sp"
                android:text="用户密码："
    />

            <EditText
                android:id="@+id/userpasswords"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/t2"
                android:layout_marginRight="30dp"
                android:layout_toRightOf="@+id/t2"

                android:ems="10"
                android:inputType="textPassword"
                android:lines="1"
                android:singleLine="true" />

            <TextView
                android:id="@+id/t3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/t2"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:text="确认密码："
                android:textColor="#383636"

                android:textSize="20sp" />

            <EditText
                android:id="@+id/editText1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/t3"
                android:layout_marginRight="30dp"
                android:layout_toRightOf="@+id/t3"

                android:ems="10"
                android:inputType="textPassword"
                android:lines="1"
                android:singleLine="true" />

            <TextView
                android:id="@+id/t4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/t3"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:text="性       别"
                android:textColor="#383636"

                android:textSize="20sp" />

            <Spinner
                android:id="@+id/editQQ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/t4"
                android:layout_marginRight="30dp"
                android:layout_toRightOf="@+id/t4"
                android:ems="10"
                android:entries="@array/languages"
                android:lines="1" />

            <TextView
                android:id="@+id/t5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/t4"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:text="电       话："
                android:textColor="#383636"

                android:textSize="20sp" />

            <EditText
                android:id="@+id/editPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/t5"
                android:layout_marginRight="30dp"
                android:layout_toRightOf="@+id/t5"

                android:ems="10"
                android:lines="1"
                android:singleLine="true" />

            <TextView
                android:id="@+id/t6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/t5"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:text="昵       称："
                android:textColor="#383636"

                android:textSize="20sp"/>

            <EditText
                android:id="@+id/editName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/t6"
                android:layout_marginRight="30dp"
                android:layout_toRightOf="@+id/t6"

                android:ems="10"
                android:lines="1"
                android:singleLine="true" />

            <TextView
                android:id="@+id/t7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/t6"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:text="地       址："
                android:textColor="#383636"

                android:textSize="20sp"/>

            <EditText
                android:id="@+id/editAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/t7"
                android:layout_marginRight="30dp"
                android:layout_toRightOf="@+id/t7"

                android:ems="10"
                android:lines="1"
                android:singleLine="true" />

            <Button
                android:id="@+id/register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/t7"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/dianji"
                android:text="注\t\t册"
                android:textColor="@color/baise"
                android:textSize="20sp" />

            <RelativeLayout
                android:id="@+id/rr1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/register"
                android:layout_marginBottom="50dp" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="24dp"
                    android:text="已有帐号，" />

                <TextView
                    android:id="@+id/userlogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textView1"
                    android:layout_alignBottom="@+id/textView1"
                    android:layout_toRightOf="@+id/textView1"
                    android:text="点击此处登录"
                    android:textColor="#000" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="1px"
                    android:layout_alignLeft="@+id/userlogin"
                    android:layout_alignRight="@+id/userlogin"
                    android:layout_below="@+id/userlogin"
                    android:background="#000" />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>