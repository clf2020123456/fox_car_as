<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBg" >

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
           >

        <RelativeLayout
            android:background="@color/colorPrimary"
            android:layout_width="fill_parent"
            android:layout_height="60dp" >

            <LinearLayout
                android:id="@+id/btn_left_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingLeft="15dp"
                android:background="@drawable/app_top_bg"
                android:paddingRight="15dp"
              >

                <Button
                    android:id="@+id/btn_left"
                    android:padding="5dp"
                    android:onClick="back"
                    android:layout_width="10sp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/arrow_left"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_right_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"

                android:visibility="invisible" >

                <Button
                    android:id="@+id/btn_right"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:background="@null"
                    android:clickable="false"
                    android:textSize="20sp" />
            </LinearLayout>


            <TextView
                android:id="@+id/nav_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="注册"
                android:textColor="#fff"
                android:textSize="20sp" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:paddingLeft="25dp"
            android:paddingRight="25dp" >


            <EditText
                android:textColorHint="@color/colorHui"
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="2dp"
                android:hint="用户名"
                android:background="@drawable/user_eidet_bg"
                android:padding="5dp"
                android:textColor="#000"
                android:textSize="20sp" />


            <EditText
                android:id="@+id/sex"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/user_eidet_bg"
                android:hint="性别"
                android:padding="5dp"
                android:textColor="#000"
                android:textColorHint="@color/colorHui"
                android:textSize="20sp" />

            <EditText
                android:background="@drawable/user_eidet_bg"
                android:textColorHint="@color/colorHui"
                android:id="@+id/userpasswords"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:hint="密码"
                android:inputType="textPassword"
                android:padding="5dp"
                android:textColor="#000"
                android:textSize="20sp" />

            <EditText
                android:background="@drawable/user_eidet_bg"
                android:id="@+id/editText1"
                android:layout_width="match_parent"
                android:textColorHint="@color/colorHui"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:hint="确认密码"
                android:inputType="textPassword"
                android:padding="5dp"
                android:textColor="#000"
                android:textSize="20sp" />

            <EditText
                android:background="@drawable/user_eidet_bg"
                android:id="@+id/editQQ"
                android:layout_width="match_parent"
                android:textColorHint="@color/colorHui"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:hint="车牌号"
                android:padding="5dp"
                android:textColor="#000"
                android:textSize="20sp" />
            <EditText
                android:background="@drawable/user_eidet_bg"
                android:id="@+id/editCarType"
                android:layout_width="match_parent"
                android:textColorHint="@color/colorHui"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:hint="车辆类型"
                android:padding="5dp"
                android:textColor="#000"
                android:textSize="20sp" />

            <EditText
                android:background="@drawable/user_eidet_bg"
                android:id="@+id/editIdenno"
                android:layout_width="match_parent"
                android:textColorHint="@color/colorHui"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:hint="身份证号码"
                android:padding="5dp"
                android:textColor="#000"
                android:textSize="20sp" />

            <EditText
                android:background="@drawable/user_eidet_bg"
                android:id="@+id/editStatus"
                android:layout_width="match_parent"
                android:textColorHint="@color/colorHui"
                android:layout_height="40dp"
                android:inputType="number"
                android:layout_marginTop="15dp"
                android:hint="租车期限（天）"
                android:padding="5dp"
                android:textColor="#000"
                android:textSize="20sp" />

            <EditText
                android:background="@drawable/user_eidet_bg"
                android:id="@+id/editPhone"
                android:layout_width="match_parent"
                android:textColorHint="@color/colorHui"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:inputType="phone"
                android:hint="电话"
                android:padding="5dp"
                android:textColor="#000"
                android:textSize="20sp" />

            <EditText
                android:background="@drawable/user_eidet_bg"
                android:id="@+id/editName"
                android:layout_width="match_parent"
                android:textColorHint="@color/colorHui"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:hint="姓名"
                android:padding="5dp"
                android:textColor="#000"
                android:textSize="20sp" />
            <EditText
                android:background="@drawable/user_eidet_bg"
                android:id="@+id/editAddress"
                android:layout_width="match_parent"
                android:textColorHint="@color/colorHui"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:hint="地址"
                android:padding="5dp"
                android:textColor="#000"
                android:textSize="20sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingTop="5dp" >
            <TextView
                android:id="@+id/tv_redText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/user_reg_ok"
                android:text="@string/text_user_reg_already_read"
                android:textSize="20sp" />
            <Button
                android:id="@+id/btn_license"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:paddingRight="5dp"
                android:textColor="@color/colorSend"
                android:text="@string/text_user_reg_eula"
                android:textSize="20sp" />
        </LinearLayout>

        <Button
            android:id="@+id/register"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/btn_login_selector"
            android:text="@string/text_user_reg_reg"
            android:textColor="#fff"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingTop="5dp" >

              </LinearLayout>
    </LinearLayout>

</ScrollView>